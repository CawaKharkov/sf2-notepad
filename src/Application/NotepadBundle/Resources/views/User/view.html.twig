{% extends "ApplicationNotepadBundle::layout.html.twig" %}

{% block title %}ApplicationNotepadBundle:User:view{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-2">
            {{ form_start(loginForm) }}
            <div class="form-group">
                {{ form_errors(loginForm) }}
            </div>
            <div class="form-group">
                {{ form_row(loginForm.email) }}
            </div>
            <div class="form-group">
                {{ form_row(loginForm.password) }}
            </div>
            <div class="form-group">
                {{ form_row(loginForm.save) }}
            </div>
            {{ form_end(loginForm) }}
        </div>
    </div>

{% endblock %}
